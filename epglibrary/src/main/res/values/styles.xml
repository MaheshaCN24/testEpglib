<resources>
    <style name="ProgramGuide.Filter.Button" parent="">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">85dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#FFFFFFDD</item>
        <item name="android:background">@drawable/filter_button_background</item>
    </style>

    <style name="ProgramGuide.Text.Detail.Metadata" parent="">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/programguide_detail_text_color</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ProgramGuide.Image.Channel" parent="">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="ProgramGuide.Text.Program.Title" parent="">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/programguide_item_padding</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#FFFFFFDD</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProgramGuide.Text.Time" parent="">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/programguide_time_row_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFFFFFDD</item>
        <item name="android:background">#242424</item>
    </style>

    <style name="ProgramGuide.Text.Program.Info" parent="">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">7sp</item>
        <item name="android:textColor">#FFFFFF99</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="ProgramGuide.Text.Day" parent="">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/programguide_time_row_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFFFFF99</item>
        <item name="android:background">@drawable/program_day_bg</item>
    </style>

    <style name="ProgramGuide.ErrorMessage" parent="">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>